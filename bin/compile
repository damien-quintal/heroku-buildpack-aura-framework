#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -o errexit
set -o pipefail
set -o nounset
unset GIT_DIR

function message() {
  echo "-----> $*..."
}

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

cd $BUILD_DIR/aura-jetty
export MAVEN_OPTS="-Xmx1024m -Xms512m"

message "Start jetty server"
mvn org.eclipse.jetty:jetty-maven-plugin:run
message "Aura Framework running!"